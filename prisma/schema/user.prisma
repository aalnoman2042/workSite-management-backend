model User {
  id               String           @id @default(uuid())
  email            String           @unique
  password         String
  role             UserRole         @default(WORKER)
  isBanned         Boolean          @default(false)
  gender           Gender?
  approved         Boolean          @default(false)
  profilePhoto     String?
 
  createdAt        DateTime         @default(now())
  updatedAt        DateTime         @updatedAt

  admin           Admin?
  chiefEngineer  CHIEF_ENGINEER?
  engineer        SITE_Engineer?
  worker          Worker?

 
  @@map("Users")
}

model Admin {
  id        String   @id @default(uuid())
  name      String
  profilePhoto  String?
  isDeleted     Boolean  @default(false)
     contactNumber String
  email     String   @unique
  user      User     @relation(fields: [userId], references: [id])
  userId    String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  companyName  String?

  @@map("Admins")
}
model SITE_Engineer {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String
  profilePhoto  String?
  isDeleted     Boolean  @default(false)
  approved     Boolean  @default(false)
     contactNumber String
  user      User     @relation(fields: [email], references: [email])
  userId    String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  workAssignments  WorkAssignment[]
  payments         WorkerPayment[]
  salaryRecords    SiteEngineerSalary[]
  attendance       Attendance[]
  companyName      String?

  @@map("SiteEngineers")
}

model Worker {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String
  profilePhoto  String?
  isDeleted     Boolean  @default(false)
     contactNumber String
  user      User     @relation(fields: [email], references: [email])
  userId    String   @unique
  nidNumber  String   @unique
  joiningDate DateTime?
  banned    Boolean  @default(false)
  approved     Boolean  @default(false)
  onleave   Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  dailyRate        Float?
  halfDayRate      Float?
  companyName      String?
  position         WorkerPosition?

  workAssignments  WorkAssignment[]
  payments         WorkerPayment[]
  attendance       Attendance[] 

  @@map("Workers")
}

model CHIEF_ENGINEER {
  id            String   @id @default(uuid())
  name          String
  profilePhoto  String?
  isDeleted     Boolean  @default(false)
  contactNumber String
  email         String   @unique
  user          User     @relation(fields: [email], references: [email])
  userId        String   @unique
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  approved      Boolean  @default(false)
  companyName   String?
  salaryRecords ChiefEngineerSalary[]

  @@map("ChiefEngineers")
}